<%- include('header.ejs') %>

<style>
    body {
        background-color: #cdcccf;
    }
    h1 {
        padding-top: 20px;
        font-weight: 900;
    }
    .study {
        padding-top: 20px;
        padding-bottom: 20px;
    }
    .study-item {
        width: 600px
    }
    .inner {
        padding-left: 40px;
    }
    .center {
        margin: auto;
        width: 50%;
        text-align: center;
    }
    .font {
        font-family: Arial, Helvetica, sans-serif;
        font-weight: 900;
    }
</style>
<div class="center font">
    <body>
    <h1 class="inner">Study Guide</h1>
    <div class="inner">
        <form action="/findQuestion" method="post">
            <% for(var i=0; i<studyDocs.length; i++) {%>
                <div class="study">
                    <ul class="list-group list-group-horizontal">
                        <button type="submit" class="btn btn-primary" onclick="changeAccountBtn()" for="questionSelect" name="questionSelect" id="questionSelect" value=<%= studyDocs[i].questionId %>>
                            <li class="list-group-item study-item"><%= studyDocs[i].question %></li>
                            <li class="list-group-item study-item"><%= studyDocs[i].answer %></li>
                        </button>
                    </ul>
                </div>
            <% } %>
        </form>
    </div>
    </body>
</div>

<%- include('footer.ejs') %>