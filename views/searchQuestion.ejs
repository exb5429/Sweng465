<style>
    body {
        background-color: #cdcccf;
    }
    h1 {
        padding-top: 20px;
        font-weight: 900;
    }
    .study {
        padding-top: 20px;
        padding-bottom: 20px;
    }
    .study-item {
        width: 600px
    }
